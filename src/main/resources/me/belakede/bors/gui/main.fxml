<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>

<?import org.controlsfx.glyphfont.Glyph?>
<BorderPane fx:controller="me.belakede.bors.gui.controller.MainController" xmlns:fx="http://javafx.com/fxml" fx:id="parent">
    <top>
        <ToolBar fx:id="toolBar" >
            <Button text="Runs" onAction="#showRuns">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="CALENDAR"></Glyph>
                </graphic>
            </Button>
            <Button text="Notes" disable="true">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="PENCIL"></Glyph>
                </graphic>
            </Button>
            <Button text="Tasks" disable="true">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="TASKS"></Glyph>
                </graphic>
            </Button>
            <Separator orientation="VERTICAL" />
            <Button text="Statistics" onAction="#showStatistics">
                <graphic>
                    <Glyph fontFamily="FontAwesome" icon="AREA_CHART"></Glyph>
                </graphic>
            </Button>
        </ToolBar>
    </top>

    <center>
    </center>
</BorderPane>